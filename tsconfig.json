{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "baseUrl": "./packages",
    "paths": {
      "@acala-dapp/apps/*": ["apps/src/*"],
      "@acala-dapp/apps": ["apps/src"],
      "@acala-dapp/page-wallet": ["page-wallet/src"],
      "@acala-dapp/page-wallet/*": ["page-wallet/src/*"],
      "@acala-dapp/page-homa": ["page-homa/src"],
      "@acala-dapp/page-homa/*": ["page-homa/src/*"],
      "@acala-dapp/page-loan": ["page-loan/src"],
      "@acala-dapp/page-loan/*": ["page-loan/src/*"],
      "@acala-dapp/page-swap": ["page-swap/src"],
      "@acala-dapp/page-swap/*": ["page-swap/src/*"],
      "@acala-dapp/page-deposit": ["page-deposit/src"],
      "@acala-dapp/page-deposit/*": ["page-deposit/src/*"],
      "@acala-dapp/page-governance": ["page-governance/src"],
      "@acala-dapp/page-governance/*": ["page-governance/src/*"],
      "@acala-dapp/react-hooks/*": ["react-hooks/src/*"],
      "@acala-dapp/react-hooks": ["react-hooks/src"],
      "@acala-dapp/react-environment/*": ["react-environment/src/*"],
      "@acala-dapp/react-environment": ["react-environment/src"],
      "@acala-dapp/react-components/*": ["react-components/src/*"],
      "@acala-dapp/react-components": ["react-components/src"],
      "@acala-dapp/ui-components/*": ["ui-components/src/*"],
      "@acala-dapp/ui-components": ["ui-components/src"]
    },
    "skipDefaultLibCheck": true
  },
  "exclude": [
    "build/**/*",
    "**/build/**/*"
  ]
}
